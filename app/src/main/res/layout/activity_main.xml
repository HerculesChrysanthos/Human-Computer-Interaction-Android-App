<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Αρχική"
        android:textColor="#0077cc"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:checked="false"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:showText="true"
        android:splitTrack="false"
        android:switchTextAppearance="@style/MyStyle"
        android:text="Γενικός Διακόπτης"
        android:textColor="#0077cc"
        app:layout_constraintBottom_toTopOf="@+id/heating"
        app:layout_constraintEnd_toStartOf="@+id/waterHeater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button

        android:id="@+id/waterHeater"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_marginEnd="44dp"
        android:drawableTop="@drawable/boiler_icon"
        android:padding="4dp"
        android:text="Θερμοσιφωνας"
        android:textColor="#fff"
        android:backgroundTint="#0077cc"
        app:layout_constraintBottom_toTopOf="@+id/controlRoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/heating"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="304dp"
        android:drawableTop="@drawable/heating_icon"
        android:text="Θερμανση"
        android:textColor="#fff"
        android:backgroundTint="#0077cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/controlRoom"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button

        android:id="@+id/controlRoom"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="304dp"
        android:text="Ελεγχος Δωματιου"
        android:textColor="#fff"
        android:backgroundTint="#0077cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/help"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:background="@drawable/button_states"
        android:text="\?"
        android:textColor="#fff"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:iconTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

</androidx.constraintlayout.widget.ConstraintLayout>